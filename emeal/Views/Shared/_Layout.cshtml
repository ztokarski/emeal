    @*    <script type="text/javascript" src="~/node_modules/bulma/css/bulma.css"></script>*@
    @*CUSTOM STYLESHEET*@
    <link type="text/css" rel="stylesheet" href="~/Content/dist/Site.css"/>

</head>
<body>
<div class="navbar">
    <div class="navbar-brand">
        <a class="navbar-item" href="@Url.Action("Index", "User")">
            <img class="user-avatar" src="@Html.ValueFor(user => (Session["User"] as User).PathToImage)" alt="User avatar"/>
        </a>

        @Html.ActionLink("e-meal", "Index", "Home", null, new {@class = "navbar-item"})

        <button class="button navbar-burger">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
    <div class="navbar-menu">
        <div class="navbar-start"></div>

        <div class="navbar-end">
            <div class="navbar-item">
                <a class="button" href="@Url.Action("SearchByIngredients", "Ingredient")">
                    <span class="glyphicon glyphicon-search"></span> Ingredients
                </a>
            </div>

            <div class="navbar-item dropdown">
                <div class="dropdown-trigger">
                    <button class="button">
                        <span class="glyphicon glyphicon-search"></span> Name
                    </button>
                </div>
                <div class="dropdown-menu">
                    @using (Html.BeginForm("Index", "Recipe", FormMethod.Get, new {@class = "dropdown-content"}))
                    {
                        <input class="dropdown-item" name="searchName" placeholder="Enter recipe name..." type="text" value=@ViewBag.SearchName>
                        <button class="button dropdown-item" type="submit">
                            <span class="glyphicon glyphicon-search"></span> Search
                        </button>
                    }
                </div>

            </div>
        </div>

    </div>

</div>
<section class="section">
    <div class="container">
        @RenderBody()
    </div>
</section>

@*CUSTOM SCRIPTS*@
<script type="text/javascript" src="~/Scripts/Site/dist/IngredientFrames.js"></script>
<script type="text/javascript" src="~/Scripts/Site/dist/StepFrames.js"></script>
<script type="text/javascript" src="~/Scripts/Site/dist/SearchByIngredient.js"></script>
<script type="text/javascript" src="~/Scripts/Site/dist/Utilities.js"></script>
</body>
</html>